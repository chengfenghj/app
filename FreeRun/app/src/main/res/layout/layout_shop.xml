<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="超级护盾"
            android:textSize="28sp"
            android:textColor="#21b"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/shield_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#2c4"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金币： 200"
            android:textSize="20sp"
            android:textColor="#ee0"
            android:gravity="center"
            />
        <Button
            android:id="@+id/shield_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购　买"
            android:textSize="25sp"
            android:textColor="#111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="超级加速"
            android:textSize="28sp"
            android:textColor="#21b"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/upspeed_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#2c4"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金币： 200"
            android:textSize="20sp"
            android:textColor="#ee0"
            android:gravity="center"
            />
        <Button
            android:id="@+id/upspeed_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购　买"
            android:textSize="25sp"
            android:textColor="#111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="超级激光"
            android:textSize="28sp"
            android:textColor="#21b"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/laser_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#2c4"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金币： 200"
            android:textSize="20sp"
            android:textColor="#ee0"
            android:gravity="center"
            />
        <Button
            android:id="@+id/laser_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购　买"
            android:textSize="25sp"
            android:textColor="#111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="超级炸弹"
            android:textSize="28sp"
            android:textColor="#21b"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/bomb_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#2c4"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金币： 200"
            android:textSize="20sp"
            android:textColor="#ee0"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bomb_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购　买"
            android:textSize="25sp"
            android:textColor="#111"
            />
    </LinearLayout>

</LinearLayout>